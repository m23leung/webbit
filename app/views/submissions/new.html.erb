<% content_for :community_label, "Create Submission" %>

<% content_for :primary_content do %>

  <div class="lg:p-10 pt-10 pb-10 px-4">
    <h1 class="text-xl font-normal mb-6">Create a Submission</h1>
    <%= render 'form', submission: @submission %>
  </div>
 
<% end %>

<% content_for :secondary_content do %>
  <div class="px-8 pt-6 pb-8">
    <div class="text-center my-4">
      <%= render_svg "submission", styles: "max-w-full h-auto mb-4" %>
    </div>
    <%= render "guidelines" %>
  </div>
<% end %>

<%= render "basic_layout" %>